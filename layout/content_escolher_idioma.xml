<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="boonedev.apptcc.EscolherIdioma"
    tools:showIn="@layout/activity_escolher_idioma">

    <TextView
        android:id="@+id/txtEscolhaIdioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtEscolhaIdioma"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>


    <Button
        android:id="@+id/btnIngles"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30sp"
        android:drawableLeft="@drawable/usa"
        android:text="@string/btnIngles"
        android:layout_below="@+id/txtEscolhaIdioma"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30px"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnPortugues"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30sp"
        android:drawableLeft="@drawable/brazil"
        android:drawableRight="@drawable/lock"
        android:text="@string/btnPortugues"
        android:layout_below="@+id/btnIngles"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30px"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnEspanhol"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30sp"
        android:drawableLeft="@drawable/spain"
        android:drawableRight="@drawable/lock"
        android:text="@string/btnEspanhol"
        android:layout_below="@+id/btnPortugues"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30px"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
