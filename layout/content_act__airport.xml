<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/alimentacao1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="boonedev.apptcc.act_Airport"
    tools:showIn="@layout/activity_act__airport">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treino"
        android:id="@+id/btnTreino"
        android:layout_marginTop="159dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercício"
        android:id="@+id/btnExercicio"
        android:layout_below="@+id/btnTreino"
        android:layout_alignLeft="@+id/btnTreino"
        android:layout_alignStart="@+id/btnTreino" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFO"
        android:id="@+id/btnInfo"
        android:layout_marginTop="124dp"
        android:layout_below="@+id/btnExercicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGroup"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btnInfo"
        android:layout_toEndOf="@+id/btnInfo"
        android:layout_marginTop="146dp"
        android:layout_marginBottom="103dp"
        android:layout_alignBottom="@+id/btnInfo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOLTAR"
        android:id="@+id/btnVoltarGroup"
        android:layout_alignBottom="@+id/rGroup"
        android:layout_alignLeft="@+id/rGroup"
        android:layout_alignStart="@+id/rGroup"
        android:layout_alignRight="@+id/rGroup"
        android:layout_alignEnd="@+id/rGroup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taxi"
        android:id="@+id/btnTaxi"
        android:drawableLeft="@drawable/lock"
        android:tag="locked"
        android:layout_alignTop="@+id/btnInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Praça de Alimentação"
        android:id="@+id/btnPracaAlim"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
