<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/teste3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="boonedev.apptcc.act_Airport"
    tools:showIn="@layout/activity_act__airport">

    <Button
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:text="Treino"
        android:id="@+id/btnTreino"
        android:background="@drawable/buttonshapebloq"
        android:layout_marginTop="159dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:text="ExercÃ­cio"
        android:background="@drawable/buttonshapebloq"
        android:id="@+id/btnExercicio"
        android:layout_below="@+id/btnTreino"
        android:layout_alignLeft="@+id/btnTreino"
        android:layout_alignStart="@+id/btnTreino" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFO"
        android:id="@+id/btnInfo"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnTreino"
        android:layout_toStartOf="@+id/btnTreino" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGroup"
        android:background="@drawable/rectangle2"

        android:layout_above="@+id/btnPracaAlim"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_alignTop="@+id/btnTreino" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="VOLTAR"
        android:id="@+id/btnVoltarGroup"
        android:background="@drawable/buttonshapebloq"
        android:layout_alignBottom="@+id/rGroup"
        android:layout_alignLeft="@+id/rGroup"
        android:layout_alignStart="@+id/rGroup"
        android:layout_alignRight="@+id/rGroup"
        android:layout_alignEnd="@+id/rGroup" />



    <Button
        android:layout_width="250dp"
        android:layout_height="180dp"

        android:id="@+id/btnPracaAlim"
        android:background="@drawable/rest"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnInfo"
        android:layout_toEndOf="@+id/btnInfo" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taxi"
        android:id="@+id/btnTaxi"
        android:drawableLeft="@drawable/lock"
        android:tag="locked"
        android:layout_alignTop="@+id/btnInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />





</RelativeLayout>
