<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView">

            <RelativeLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true">


                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/mapas"
                    android:layout_gravity="right|left"
                    android:id="@+id/imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="169dp"
                    android:layout_marginEnd="169dp" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:background="@drawable/aeroporto"
                    android:id="@+id/btnAirport"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/arvore"
                    android:layout_gravity="right|left"
                    android:id="@+id/arvore"
                    android:layout_alignBottom="@+id/btnAirport"
                    android:layout_toRightOf="@+id/btnAirport"
                    android:layout_toEndOf="@+id/btnAirport"
                    android:layout_marginLeft="21dp"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@drawable/taxi"
                    android:id="@+id/Taxi"
                    android:layout_below="@+id/btnAirport"
                    android:layout_toLeftOf="@+id/arvore"
                    android:layout_toStartOf="@+id/arvore"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/arvore"
                    android:layout_gravity="right|left"
                    android:id="@+id/arvore1"
                    android:layout_alignBottom="@+id/Taxi"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@drawable/hotel2"
                    android:id="@+id/btnHotel"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="312dp"
                    android:layout_marginStart="352dp"
                    android:layout_marginTop="27dp" />

                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="80dp"
                    android:src="@drawable/casa"
                    android:layout_gravity="right|left"
                    android:id="@+id/casa"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/arvore"
                    android:layout_toEndOf="@+id/arvore"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="32dp" />

                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/arvore"
                    android:layout_gravity="right|left"
                    android:id="@+id/arvore2"
                    android:layout_below="@+id/casa"
                    android:layout_marginLeft="290dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:id="@+id/btnEscola"
                    android:background="@drawable/escola"
                    android:layout_marginTop="239dp"
                    android:layout_marginLeft="120dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/lagoa"
                    android:layout_below="@+id/Taxi"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/bus2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="278dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnEmpresa"
                    android:background="@drawable/empresa"
                    android:layout_alignBottom="@+id/imageView4"
                    android:layout_alignLeft="@+id/arvore2"
                    android:layout_alignStart="@+id/arvore2" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:background="@drawable/supermakate2"
                    android:id="@+id/btnMercado"
                    android:layout_marginLeft="650dp"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:layout_width="250dp"
                    android:layout_height="130dp"
                    android:id="@+id/btnHospital"
                    android:background="@drawable/hospital"
                    android:layout_marginTop="390dp"
                    android:layout_marginLeft="260dp"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/ambulance"
                    android:layout_marginTop="430dp"
                    android:layout_marginLeft="530dp"/>


            </RelativeLayout>

        </HorizontalScrollView>

    </ScrollView>



</RelativeLayout>
