<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:showIn="@layout/activity_act_map">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView">

            <RelativeLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true">



                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/maps"
                    android:layout_gravity="right|left"
                    android:id="@+id/imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="278dp"
                    android:layout_height="185dp"
                    android:background="@drawable/btnairport"
                    android:id="@+id/btnAirport"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="268dp"
                    android:layout_height="175dp"
                    android:background="@drawable/btnhospital"
                    android:id="@+id/btnHospital"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="-35dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btnAirport"
                    android:layout_toEndOf="@+id/btnAirport" />

                <Button
                    android:layout_width="148dp"
                    android:layout_height="120dp"
                    android:background="@drawable/btnhotel"
                    android:id="@+id/btnHotel"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="-5dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btnAirport"
                    android:layout_toEndOf="@+id/btnAirport" />

                <Button
                    android:layout_width="188dp"
                    android:layout_height="115dp"
                    android:background="@drawable/btnescola"
                    android:id="@+id/btnescola"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/btnAirport" />

                <Button
                    android:layout_width="190dp"
                    android:layout_height="165dp"
                    android:background="@drawable/btnempresa"
                    android:id="@+id/btnempresa"
                    android:layout_marginTop="-6dp"
                    android:layout_below="@+id/btnescola"
                    android:layout_alignRight="@+id/btnAirport"
                    android:layout_alignEnd="@+id/btnAirport" />

                <Button
                    android:layout_width="190dp"
                    android:layout_height="115dp"
                    android:background="@drawable/btnmercado"
                    android:id="@+id/btnmercado"
                    android:layout_marginLeft="-30dp"
                    android:layout_marginTop="-10dp"
                    android:layout_alignTop="@+id/btnempresa"
                    android:layout_toRightOf="@+id/btnHotel"
                    android:layout_toEndOf="@+id/btnHotel" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:id="@+id/btnicairp"
                    android:background="@drawable/icairp"
                    android:layout_below="@+id/btnHotel"
                    android:layout_alignLeft="@+id/btnescola"
                    android:layout_alignStart="@+id/btnescola" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:id="@+id/btnIcHotel"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="430dp"
                    android:background="@drawable/ichotellock"
                     />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:id="@+id/btnIcEscola"
                    android:background="@drawable/icescolalock"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="100dp"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:id="@+id/btnIcEmpresa"
                    android:background="@drawable/icempresalock"
                    android:layout_alignBottom="@+id/btnmercado"
                    android:layout_toRightOf="@+id/btnicairp"
                    android:layout_toEndOf="@+id/btnicairp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:id="@+id/btnIcHosp"
                    android:background="@drawable/ichosplock"
                    android:layout_marginTop="210dp"
                    android:layout_marginLeft="390dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:id="@+id/btnIcMerc"
                    android:background="@drawable/icmerclock"
                    android:layout_below="@+id/btnescola"
                    android:layout_toRightOf="@+id/btnIcHotel"
                    android:layout_toEndOf="@+id/btnIcHotel" />
                <Button
                    android:layout_width="180dp"
                    android:layout_height="105dp"
                    android:background="@drawable/btnparque"
                    android:id="@+id/btnParque"
                    android:layout_marginLeft="520dp"
                    android:layout_marginTop="160dp"
                    />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:id="@+id/btnIcParque"
                    android:background="@drawable/icparquelock"
                    android:layout_below="@+id/btnAirport"
                    android:layout_alignLeft="@+id/btnIcMerc"
                    android:layout_alignStart="@+id/btnIcMerc"
                    android:layout_marginLeft="27dp"
                    android:layout_marginStart="27dp" />




            </RelativeLayout>

        </HorizontalScrollView>

    </ScrollView>


</RelativeLayout>
