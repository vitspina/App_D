<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView">

            <RelativeLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true">


                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/mapas"
                    android:layout_gravity="right|left"
                    android:id="@+id/imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:background="@drawable/aeroporto"
                    android:id="@+id/btnAirport"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/arvore"
                    android:layout_gravity="right|left"
                    android:id="@+id/arvore"
                    android:layout_alignBottom="@+id/btnAirport"
                    android:layout_toRightOf="@+id/btnAirport"
                    android:layout_toEndOf="@+id/btnAirport"
                    android:layout_marginLeft="21dp"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@drawable/taxi"
                    android:id="@+id/Taxi"
                    android:layout_below="@+id/btnAirport"
                    android:layout_toLeftOf="@+id/arvore"
                    android:layout_toStartOf="@+id/arvore"
                    android:layout_marginTop="11dp"/>

                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/arvore"
                    android:layout_gravity="right|left"
                    android:id="@+id/arvore1"
                    android:layout_alignBottom="@+id/Taxi"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@drawable/hotel2"
                    android:id="@+id/btnHotel"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="312dp"
                    android:layout_marginStart="352dp"
                    android:layout_marginTop="27dp" />

                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="80dp"
                    android:src="@drawable/casa"
                    android:layout_gravity="right|left"
                    android:id="@+id/casa"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/arvore"
                    android:layout_toEndOf="@+id/arvore"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="32dp" />

                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/arvore"
                    android:layout_gravity="right|left"
                    android:id="@+id/arvore2"
                    android:layout_below="@+id/casa"
                    android:layout_marginLeft="290dp" />



            </RelativeLayout>

        </HorizontalScrollView>

    </ScrollView>



</RelativeLayout>
