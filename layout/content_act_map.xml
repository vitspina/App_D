<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:showIn="@layout/activity_act_map">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView">

            <RelativeLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true">


                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/maps"
                    android:layout_gravity="right|left"
                    android:id="@+id/imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="278dp"
                    android:layout_height="185dp"
                    android:background="@drawable/btnairport"
                    android:id="@+id/btnAirport"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@drawable/taxi"
                    android:id="@+id/Taxi"
                    android:layout_below="@+id/imgAirpStars"
                    android:layout_toRightOf="@+id/imgAirpStars"
                    android:layout_toEndOf="@+id/imgAirpStars"
                    android:layout_marginLeft="90dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="25dp" />

                <Button
                    android:layout_width="250dp"
                    android:layout_height="130dp"
                    android:id="@+id/btnHospital"
                    android:background="@drawable/hospital"
                    android:layout_alignTop="@+id/Taxi"
                    android:layout_toRightOf="@+id/btnAirport"
                    android:layout_toEndOf="@+id/btnAirport"
                    android:layout_marginLeft="28dp"
                    android:layout_marginStart="28dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgAirpStars"

                    android:layout_alignBottom="@+id/btnAirport"
                    android:layout_below="@+id/btnAirport" />

                <Button
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:background="@drawable/btnhotel"
                    android:id="@+id/btnHotel"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/btnHospital"
                    android:layout_alignStart="@+id/btnHospital"
                    android:layout_marginLeft="38dp"
                    android:layout_marginStart="38dp" />


            </RelativeLayout>

        </HorizontalScrollView>

    </ScrollView>


</RelativeLayout>
